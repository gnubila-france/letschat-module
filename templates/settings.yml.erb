#
# Let's Chat Settings
#
# See defaults.yml for all available options
#

env: production # development / production

http:
  enable: <%= @http_enabled %>
  host: <%= @lc_bind_address %>
  port: <%= @http_port %>

https:
  enable: <%= @ssl_enabled %>
  port: <%= @ssl_port %>
  key: <%= @ssl_key %>
  cert: <%= @ssl_cert %>

files:
  enable: true
  provider: local
  local:
    dir: uploads

xmpp:
  enable: <%= @xmpp_enabled %>
  debug:
    handled: <%= @xmpp_debug_handled %>
    unhandled: <%= @xmpp_debug_unhandled %>
  port: <%= @xmpp_port %>
  domain: <%= @xmpp_domain %>
  <%- if @xmpp_tls_enabled -%>
  tls:
    enable: true
    key: <%= @xmpp_tls_key %>
    cert: <%= @xmpp_tls_cert %>
  <%- end -%>

database:
  uri: mongodb://<%= @dbuser %>:<%= @dbpass %>@<%= @dbhost %>:<%= @dbport %>/<%= @dbname %>

secrets:
  cookie: <%= @cookie %>

rooms:
  private: <%= @rooms_private %>
  roster: <%= @rooms_roster %>
  expire: <%= @rooms_expire %>

auth:
  providers: [<%= @authproviders %>]
  local:
    enableRegistration: <%= @registration %>

<% if @ldap_auth_enabled -%>
  # https://github.com/sdelements/lets-chat-ldap
  ldap:
    connect_settings:
      url: <%= @ldap_url %>
      <%- if @ldap_tls_ca_cert -%>
      tlsOptions:
        ca: <%= @ldap_tls_ca_cert %>
      <%- end -%>
    bind_options:
      bindDN: <%= @ldap_bind_dn %>
      bindCredentials: <%= @ldap_bind_credentials %>
    search:
      base: <%= @ldap_search_base %>
      opts:
        scope: <%= @ldap_search_scope %>
        filter: <%= @ldap_search_filter %>
    field_mappings:
      <%- @ldap_field_mappings.keys.sort.each do |k| -%>
      <%= k -%>: <%= @ldap_field_mappings[k] %>
      <%- end -%>
<% end -%>
